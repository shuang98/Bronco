<style>
    body {
        background-color: #CFE6FA;
    }
</style>
<% if current_user.username == @user.username %>
<h1>Update your profile</h1>

<div class ="container">
<% if @user.errors.any? %>
	<div class="alert alert-danger">
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>
    
<%= form_for @user, url: user_path do |f|%>

  <h2> <%= @user.username %> </h2> </br>
  <body id = "dog">Email </body> <%= f.text_field :email, class: "form-control" %> </br>
  <body id = "dog">Password(6 - 20 characters) </body> <%= f.password_field :password, class: "form-control" %> </br>
  	<body id = "dog">Password Confirmation </body> <%= f.password_field :password_confirmation, class: "form-control" %> </br>
  	<%= f.submit "Submit" , class: "btn btn-primary"%>
<% end %>
</div>

<% else %>
	<h2>Error: Cannot edit another user's profile</h2>
	<%= link_to 'Click here to go back to courses', courses_path %>

<% end %>

