<style>
body{
	
	background-color:#CFE6FA;	

}
</style>
<% if current_user %>
  <h2>You are already logged in</h2>
  <%= link_to 'Click here to go back to courses', courses_path %>
<% else %>
<h1 id = "header"><br><br>Login</h1>
<% if flash[:error] %>
    <div class="alert alert-danger"><%= flash[:error] %></div>
<% end %>
<%= form_tag '/login' do %>
	
  	Email: <%= text_field_tag( :email,"", class: "form-control")%> <br>
  	Password: <%= password_field_tag :password, "", class: "form-control" %> <br>
  	<%= submit_tag "Submit", class: "btn btn-primary" %>

<% end %>

<% end %>



	
